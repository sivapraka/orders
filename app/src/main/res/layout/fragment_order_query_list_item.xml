<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relativeLayoutProductList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoCompleteTextViewProductName"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10">

        <ImageView
            android:id="@+id/imageViewCustomer"
            android:layout_width="60dp"
            android:visibility="gone"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textViewCustomerName"
            android:layout_margin="3dp" />

        <ImageView
            android:id="@+id/image_view_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/space_5"
            app:srcCompat="@drawable/ic_cancel"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textViewOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue_color"
            android:layout_toEndOf="@+id/imageViewCustomer"
            android:textSize="@dimen/space_14"
            style="@style/brandon_bld" />

        <TextView
            android:id="@+id/textViewCustomerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewCustomerName"
            android:text="136636 RS"
            style="@style/brandon_reg"
            android:textSize="@dimen/space_12"
            android:textColor="@color/text_color"
            android:layout_alignParentBottom="true"
            android:visibility="visible" />


        <TextView
            android:id="@+id/textViewCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewEnterBy"
            android:layout_alignParentRight="true"
            android:layout_alignEnd="@+id/textViewOrderNo"
            android:text="12 Mar 2018"
            style="@style/brandon_reg"
            android:visibility="visible"
            android:layout_marginTop="@dimen/space_5"
            android:textColor="@color/colorLightGray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignEnd="@+id/textViewOrderNo"
            android:text="12 Mar 2018"
            android:paddingHorizontal="@dimen/space_3"
            android:visibility="visible"
            style="@style/brandon_reg"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_below="@+id/textViewPrice"
            android:text="@string/createdBy"
            style="@style/brandon_reg"
            android:layout_marginTop="@dimen/space_5"
            android:visibility="visible"
            android:textColor="@color/text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewEnterBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPrice"
            android:paddingHorizontal="@dimen/space_3"
            android:layout_toRightOf="@id/textViewCreatedBy"
            android:text=""
            style="@style/brandon_reg"
            android:layout_marginTop="@dimen/space_5"
            android:visibility="visible"
            android:background="@drawable/button_background_orange"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>