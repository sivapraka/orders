<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorWhite"
	app:cardBackgroundColor="@color/colorWhite"
	app:cardCornerRadius="@dimen/space_3"
	app:cardElevation="@dimen/space_2"
	app:cardUseCompatPadding="true">
	
	<RelativeLayout
		android:id="@+id/relativeLayoutProductList"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/space_10">
		
		<TextView
			android:id="@+id/datetime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginStart="@dimen/space_5"
			android:textColor="@color/text_blue_color"
			style="@style/brandon_bld"
			android:textSize="@dimen/space_14" />

		<TextView
			android:id="@+id/time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_marginStart="@dimen/space_5"
			android:textColor="@color/text_blue_color"
			android:textSize="@dimen/space_14"
			style="@style/brandon_bld" />
		
		<TextView
			android:id="@+id/textViewProductName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/datetime"
			android:layout_marginStart="@dimen/space_5"
			android:layout_marginTop="@dimen/space_5"
			android:layout_marginEnd="@dimen/space_40"
			android:text="Bosch"
			android:textColor="@color/text_color"
			style="@style/brandon_reg"
			android:textSize="12sp" />
		
		<TextView
			android:id="@+id/description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/textViewProductName"
			android:layout_marginStart="@dimen/space_5"
			android:layout_marginTop="@dimen/space_5"
			android:layout_toLeftOf="@+id/image_view_cancel"
			android:ellipsize="end"
			android:maxLines="2"
			style="@style/brandon_reg"
			android:textColor="@color/text_color"
			android:text="Bosceoogiwriowgroitnrnewgriotiowioriiriorioioinewrinworwniorwinoenoiwinoinoionwioreinorenioeninireoernioernirinrnieorneoiioerniorenoiienrorneoinreioh"
			android:textSize="12sp" />

		<ImageView
			android:id="@+id/image_view_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentBottom="true"
			android:visibility="gone"
			android:layout_marginRight="@dimen/space_5"
			app:srcCompat="@drawable/ic_cancel"/>
	
	</RelativeLayout>


</androidx.cardview.widget.CardView>