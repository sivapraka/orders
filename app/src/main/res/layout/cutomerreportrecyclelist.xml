<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:showIn="@layout/fragment_customer_report"
    android:id="@+id/relativeLayoutCustomreportList"
    android:paddingTop="@dimen/space_5"
    android:weightSum="100">

    <TextView
        android:id="@+id/customreportname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/imgcustomreportorder"
        android:layout_toLeftOf="@id/imgcustomreportorder"
        android:layout_weight="60"
        android:minWidth="@dimen/space_50"
        android:text="edgfdfdnhfdnfngngfng" />

    <ImageView
        android:id="@+id/imgcustomreportorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:minWidth="@dimen/space_50"
        android:layout_toLeftOf="@id/imgcustomreportsales"
        android:layout_weight="15"
        app:srcCompat="@drawable/ic_checked"
        />
    <ImageView
        android:id="@+id/imgcustomreportsales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:minWidth="@dimen/space_50"
        app:srcCompat="@drawable/ic_checked"
        android:layout_toLeftOf="@id/imgcustomreportpayment"
        android:layout_weight="15"
        />

    <ImageView
        android:id="@+id/imgcustomreportpayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:minWidth="@dimen/space_50"
        android:layout_weight="10"
        android:maxWidth="@dimen/space_50"
        app:srcCompat="@drawable/ic_checked"

        />
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_1"
    android:background="@color/colorNormalBackground"
    android:layout_below="@+id/customreportname"
    android:layout_marginTop="@dimen/space_5"
   />

</RelativeLayout>