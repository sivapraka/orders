<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayoutMenu"
        android:layout_width="wrap_content"
        android:minHeight="@dimen/space_96"
        android:background="@drawable/border_menu_list"
        android:layout_height="wrap_content"
        android:gravity="center">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="@dimen/space_32"
                android:layout_height="@dimen/space_32"
                android:minHeight="@dimen/space_32"
                android:minWidth="@dimen/space_32"
                android:maxHeight="@dimen/space_64"
                android:maxWidth="@dimen/space_64"
                android:layout_centerHorizontal="true"
                android:gravity="center" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewLogo"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:visibility="visible"
            style="@style/brandon_reg"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/space_14" />
    </RelativeLayout>

</RelativeLayout>