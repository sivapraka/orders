<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/space_6"
    android:background="@color/transparent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTop">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewDetails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_200"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorWhite"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/space_3"
            app:cardElevation="@dimen/space_3"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayoutBikeDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10">

                <TextView
                    android:id="@+id/confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/space_14"
                    android:text="@string/confirmation"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/space_18"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textViewLogoutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/confirmation"
                   android:layout_marginTop="@dimen/space_10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/space_14"
                    android:text="@string/remove_all"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/space_16"
                    android:textStyle="normal"
                    android:layout_marginLeft="@dimen/space_14" />

                <LinearLayout
                    android:id="@+id/linearLayoutLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/space_5"
                    android:layout_marginStart="@dimen/space_5"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/space_2"
                    android:layout_alignParentLeft="true">


                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_background_red"
                        android:layout_marginEnd="@dimen/space_5"
                        android:text="@string/cancel"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/space_5" />

                    <Button
                        android:id="@+id/buttonOk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:text="@string/ok"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>

