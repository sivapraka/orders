<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/space_4"
    app:cardElevation="@dimen/cardElevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayoutProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="@dimen/space_5">

            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textViewProductName"
                android:layout_margin="3dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@+id/imageViewProduct"
                android:text="Bosch"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image_view_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="@dimen/space_5"
                app:srcCompat="@drawable/ic_cancel" />

            <TextView
                android:id="@+id/textViewOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/image_view_cancel"
                android:layout_marginEnd="13dp"
                android:text="rt"
                android:textColor="@color/colorLightGray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textViewProductID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewProductName"
                android:layout_alignStart="@+id/textViewProductName"
                android:text="136636 RS"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/textViewPaidorUnpaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewProductID"
                android:layout_alignStart="@+id/textViewProductName"
                android:text="136636 RS"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewProduct"
                android:layout_alignEnd="@+id/textViewOrderNo"
                android:text="12 Mar 2018"
                android:textColor="@color/colorLightGray"
                android:textSize="11sp"
                android:visibility="visible" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:id="@+id/view1"
            android:layout_below="@+id/relativeLayoutProductList"
            android:background="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/view1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:background="@color/colorDarkGray"
            android:layout_height="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/product_code"
                android:id="@+id/textViewProductCount"
                android:layout_marginStart="@dimen/space_10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textNormal"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="product Count "
                android:id="@+id/textViewProductPrice"
                android:layout_marginEnd="@dimen/space_10"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textNormal"/>

        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>